//deep copy

let arr = [[1, 2, 3], {a: 1, b:1}]
let serializedArr = JSON.stringify(arr);
let deepCopy = JSON.parse(serializedArr);

deepCopy[1].c = 3;

console.log(arr);
console.log(deepCopy);

// shallow copy

let shallowArr = arr.slice();
shallowArr[0].push(4);
console.log(arr);
console.log(shallowArr);
